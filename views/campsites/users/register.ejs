<% layout('campsites/layouts/boilerplate') %>

<div id="login-signup" class="row justify-content-center">
    <div class="custom-border remove-border col col-lg-6 p-4">
        <div class="d-flex justify-content-center border-bottom mb-4">
            <h6 class="pb-3 fw-bold">Sign up</h6>
        </div>
        <form action="/users/register" class="validation-form" method="POST" novalidate>
            <h5 class="mb-4 text-center">Welcome to Campspot</h5>
            <div class="mb-3">
                <input type="text" class="custom-hover custom-border common-placeholder form-control p-2" id="username" name="username" placeholder="Username" aria-describedby="username" required autocomplete="name">
                <div class="invalid-feedback">Please provide a valid username</div>
            </div>
            <div class="mb-3">
                <input type="email" class="custom-hover custom-border common-placeholder form-control p-2" id="email" name="email" placeholder="Email" aria-describedby="email" required autocomplete="email">
                <div class="invalid-feedback">Please provide a valid email</div>
            </div>
            <div class="mb-5">
                <input type="password" class="custom-hover custom-border common-placeholder form-control p-2" id="password" name="password" placeholder="Password" aria-describedby="password" minlength="8" required>
                <div class="invalid-feedback">Password must contain at least 8 characters</div>
            </div>
            <div>
                <button type="submit" class="btn-style col-12 p-2">Continue</button>
            </div>
        </form>
    </div>
</div>